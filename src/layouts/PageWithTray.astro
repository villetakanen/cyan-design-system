---
import AppBar from '../components/server/AppBar.astro';
import Bar from '../components/server/Bar.astro';
import BaseHead from '../components/server/BaseHead.astro';
import Rail from '../components/server/Rail.astro';
import BaseTail from '../components/server/BaseTail.astro';

const { title, noun, showTray } = Astro.props;
---
<html lang="en">
  <BaseHead title="Cyan Design System v2" />
  <body>
    <cn-tray-button
      aria-expanded={showTray ? "true" : "false"}
    ></cn-tray-button> 
    <Rail />
    <Bar />
    <nav class="cn-tray">
      <slot name="tray" />
   </nav>
    <AppBar title={title} noun={noun}/>
    <main>
	  <slot></slot>
    </main>
    <BaseTail />
    <slot name="fab-tray"></slot>
    <slot name="end-of-body"></slot>
  </body>
</html>
