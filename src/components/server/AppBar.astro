---
const { title, noun, modal } = Astro.props;
const pageTitle = title || 'Cyan Design System [NEXT]';

const mode = modal ? 'modal' : 'sticky';
---
<cn-app-bar title={pageTitle} shortTitle="CDSv2" noun={noun} mode={mode}>
  <cn-lightmode-button></cn-lightmode-button>
  <cn-share-button></cn-share-button>
</cn-app-bar>