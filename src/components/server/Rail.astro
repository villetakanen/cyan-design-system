---
const currentPath = Astro.url.pathname;

type RailItem = {
  label?: string;
  href: string;
  icon: string;
};

const rail: Array<RailItem> = [
  {
    href: '/',
    icon: 'd20',
  },
  {
    href: '/principles',
    icon: 'tokens',
    label: 'Principles',
  },
  {
    href: '/inputs',
    icon: 'gamepad',
    label: 'inputs',
  },
  {
    href: '/theming',
    icon: 'palette',
    label: 'Theming',
  },
  {
    href: '/elements',
    icon: 'components',
    label: 'Components',
  },
  {
    href: '/layout',
    icon: 'font',
    label: 'Layout',
  },
];
---

<nav class="rail">
  {
    rail.map((item) => {
      const isActive = currentPath === item.href;
      return (
        <a href={item.href}>
          <cn-navigation-icon
            !active = {isActive}
            noun={item.icon}
            label={item.label}
            checked={currentPath === item.href}
          />
        </a>
      );
    })
  }
</nav>